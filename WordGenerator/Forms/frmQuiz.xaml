<Window x:Class="WordGenerator.frmQuiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordGenerator"
        mc:Ignorable="d"
        Title="שאלון" Height="300" Width="300" FontSize="18"  Background="#FFE4E4E4" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label Name="lblWord" Content="{Binding Word}"/>
            
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="txtMeaning" FlowDirection="RightToLeft" InputLanguageManager.InputLanguage="he-IL"  MinWidth="150" TextChanged="txtMeaning_TextChanged" KeyDown="txtMeaning_KeyDown" />

        </StackPanel>
    </Grid>
</Window>
