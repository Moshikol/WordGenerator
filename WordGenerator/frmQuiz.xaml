<Window x:Class="WordGenerator.frmQuiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordGenerator"
        mc:Ignorable="d"
        Title="שאלון" Height="300" Width="300"  Background="#FFE4E4E4">
    <Grid >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label Name="lblWord" Content="{Binding Word}"/>
            
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBox Name="txtMeaning" BorderBrush="{Binding IsRight}"/>

        </StackPanel>
    </Grid>
</Window>
